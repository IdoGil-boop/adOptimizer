# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://adsoptimizer:dev_password_change_in_prod@localhost:5432/adsoptimizer

# Redis
REDIS_URL=redis://localhost:6379/0

# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_mcc_id_if_applicable

# OAuth2 Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your_fernet_key_here

# Session Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
FEATURE_FLAG_APPLY_SUGGESTIONS=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Scoring Thresholds
MIN_IMPRESSIONS_FOR_SCORING=100
MIN_CLICKS_FOR_SCORING=10

# Celery Beat Schedule (cron format)
SYNC_SCHEDULE_HOUR=2
SYNC_SCHEDULE_MINUTE=0
